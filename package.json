{
  "name": "flatom",
  "private": true,
  "version": "0.1.0",
  "description": "State manager",
  "main": "index.js",
  "author": "Evgeny <arswarog@yandex.ru>",
  "license": "MIT",
  "readme": "README.md",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap && lerna run rebuild",
    "dev": "lerna run --parallel dev",
    "build": "lerna run build",
    "test": "jest --collect-coverage",
    "size": "lerna run size",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx packages/",
    "lint:fix": "yarn run lint --fix",
    "clean": "lerna run --parallel clean",
    "postclean": "rm -rf packages/*/node_modules packages/*/src/*.d.ts packages/*/src/**/*.d.ts",
    "prerebuild": "yarn run clean",
    "rebuild": "lerna bootstrap",
    "postrebuild": "lerna run build",
    "prettier:check": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write **/*.ts"
  },
  "keywords": [
    "flatom",
    "reatom",
    "state",
    "store",
    "flux",
    "atom",
    "redux",
    "state-manager",
    "state manager"
  ],
  "devDependencies": {
    "@babel/preset-typescript": "^7.12.7",
    "@pvm/github": "^0.55.19",
    "@pvm/pvm": "^0.55.19",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-react": "^7.26.1",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "microbundle": "^0.14.0",
    "prettier": "^2.4.1",
    "react": "^17.0.1",
    "size-limit": "^4.9.2",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
